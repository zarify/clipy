{
  "id": "default-playground",
  "version": "1.0.0",
  "title": "Default Python Playground",
  "description": "A general-purpose Python programming environment",
  "starter": "print('Hello from MicroPython')\n",
  "instructions": "This is a sample scenario. Edit the code and press Run to see output in the terminal.",
  "links": [
    "https://docs.micropython.org/"
  ],
  "runtime": {
    "type": "micropython",
    "url": "./vendor/micropython.wasm"
  },
  "execution": {
    "timeoutSeconds": 30,
    "maxOutputLines": 1000
  },
  "feedback": [
    {
      "id": "f-avoid-print-or-def",
      "title": "Avoid prints / functions (hint)",
      "when": [
        "edit"
      ],
      "pattern": {
        "type": "regex",
        "target": "code",
        "expression": "print\\(|def "
      },
      "message": "Looks like you're using print or defining functions",
      "severity": "hint",
      "visibleByDefault": true
    },
    {
      "id": "f-sample-output",
      "title": "Sample output detected",
      "when": [
        "run"
      ],
      "pattern": {
        "type": "regex",
        "target": "stdout",
        "expression": "Hello from MicroPython"
      },
      "message": "Sample output detected",
      "severity": "info",
      "visibleByDefault": true
    },
    {
      "id": "f-hardcoded-password",
      "title": "Avoid hard-coded secrets",
      "when": [
        "edit"
      ],
      "pattern": {
        "type": "regex",
        "target": "code",
        "expression": "password"
      },
      "message": "Avoid hard-coding passwords",
      "severity": "warning",
      "visibleByDefault": true
    }
  ]
}