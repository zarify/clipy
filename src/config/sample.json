{
  "id": "default-playground",
  "version": "1.0.0",
  "title": "Default Python Playground",
  "description": "A general-purpose Python programming environment",
  "starter": "print('Hello from MicroPython')\n",
  "instructions": "This is a sample scenario. Edit the code and press Run to see output in the terminal.",
  "links": [
    "https://docs.micropython.org/"
  ],
  "runtime": {
    "type": "micropython",
    "url": "/vendor/micropython.mjs"
  },
  "execution": {
    "timeoutSeconds": 30,
    "maxOutputLines": 1000
  },
  "tests": [
    {
      "id": "t-hello",
      "description": "prints the sample greeting",
      "expected_stdout": "Hello from MicroPython"
    },
    {
      "id": "t-single-word",
      "description": "testing a single Hello",
      "expected_stdout": "Hello"
    },
    {
      "id": "t-regex-multiline",
      "description": "testing multiline regex",
      "expected_stdout": {
        "type": "regex",
        "expression": "Hello\\nfrom MicroPython",
        "flags": ""
      }
    },
    {
      "id": "t-multiline",
      "description": "Testing multiline output",
      "expected_stdout": "Hello\nfrom MicroPython"
    },
    {
      "id": "t-echo",
      "description": "echo input using input()",
      "main": "x = input()\nprint('GOT:' + x)",
      "stdin": "hello",
      "expected_stdout": "GOT:hello"
    }
  ],
  "feedback": [
    {
      "id": "f-avoid-print-or-def",
      "title": "Avoid prints / functions (hint)",
      "when": [
        "edit"
      ],
      "pattern": {
        "type": "regex",
        "target": "code",
        "expression": "print\\(|def "
      },
      "message": "Looks like you're using print or defining functions",
      "severity": "hint",
      "visibleByDefault": true
    },
    {
      "id": "f-sample-output",
      "title": "Sample output detected",
      "when": [
        "run"
      ],
      "pattern": {
        "type": "regex",
        "target": "stdout",
        "expression": "Hello from MicroPython"
      },
      "message": "Sample output detected",
      "severity": "info",
      "visibleByDefault": true
    },
    {
      "id": "f-hardcoded-password",
      "title": "Avoid hard-coded secrets",
      "when": [
        "edit"
      ],
      "pattern": {
        "type": "regex",
        "target": "code",
        "expression": "password"
      },
      "message": "Avoid hard-coding passwords",
      "severity": "warning",
      "visibleByDefault": true
    }
  ]
}