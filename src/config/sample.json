{
  "id": "default-playground",
  "version": "1.0.0",
  "title": "Default Python Playground",
  "description": "A general-purpose Python programming environment",
  "starter": "print('Hello from MicroPython')\n",
  "instructions": "This is a sample scenario. Edit the code and press Run to see output in the terminal.",
  "links": [
    "https://docs.micropython.org/"
  ],
  "runtime": {
    "type": "micropython",
    "url": "./vendor/micropython.wasm"
  },
  "execution": {
    "timeoutSeconds": 30,
    "maxOutputLines": 1000
  },
  "feedback": {
    "ast": [],
    "regex": [
      {
        "pattern": "print\\(|def ",
        "message": "Looks like you're using print or defining functions",
        "target": "code"
      },
      {
        "pattern": "Hello from MicroPython",
        "message": "Sample output detected",
        "target": "output"
      },
      {
        "pattern": "password",
        "message": "Avoid hard-coding passwords",
        "target": "code"
      }
    ]
  }
}